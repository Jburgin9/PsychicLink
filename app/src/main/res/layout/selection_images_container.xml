<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/selection_container">

        <RelativeLayout
            android:id="@+id/second_frag_rel_display_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/display_image_1"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@mipmap/ic_launcher_round" />

                <ImageView
                    android:id="@+id/display_image_3"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@mipmap/ic_launcher_round" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/second_frag_rel_display_holder2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/second_frag_rel_display_holder">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/display_image_2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@mipmap/ic_launcher_round" />

                <ImageView
                    android:id="@+id/display_image_4"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@mipmap/ic_launcher_round" />


            </LinearLayout>
        </RelativeLayout>

</RelativeLayout>